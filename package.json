{
  "name": "posts",
  "properName": "Posts",
  "description": "A no-frills, cross-platform sticky-notes app with Markdown support.",
  "author": "Bryan Elliott<fordiman@gmail.com>",
  "version": "0.2.0",
  "private": true,
  "main": "app/main.js",
  "homepage": ".",
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^2.0.0",
    "electron-json-storage": "^4.6.0",
    "mime-types": "^2.1.35",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "build:electron": "electron-builder -wl",
    "build:react": "craco build",
    "build": "craco build && electron-builder -wl",
    "test": "craco test",
    "start": "concurrently -k \"BROWSER=none npx craco start\" \"sleep 5; npx electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@fordi-org/taskify": "^1.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "color-space": "^2.0.0",
    "concurrently": "^8.0.1",
    "electron": "^23.2.1",
    "electron-builder": "^23.6.0",
    "markdown-it": "^13.0.1",
    "markdown-it-multimd-table": "^4.2.1",
    "markdown-it-task-lists": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "turndown": "^7.1.2",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "build": {
    "appId": "org.fordi.posts",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l"
          ]
        }
      ]
    },
    "files": [
      "node_modules/**/*",
      "app/**/*",
      "build/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "app/main.js"
    }
  }
}
